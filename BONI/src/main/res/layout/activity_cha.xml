<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cha"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bwie.d.boni.ChaActivity">

    <LinearLayout
        android:layout_weight="0"
        android:background="#F44336"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">


        <ImageView
            android:id="@+id/cha_fan"
            android:layout_weight="0"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/fanhui"
            android:layout_margin="20dp"
            android:clickable="true"/>
        <EditText
            android:id="@+id/cha_ed"
            android:layout_weight="1"
            android:hint="歌曲名、歌手名"
            android:textColor="#FFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/cha_qr"
            android:layout_weight="0"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@mipmap/ic_menu_search"
            android:layout_margin="20dp"
            android:clickable="true"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/cha_recycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
